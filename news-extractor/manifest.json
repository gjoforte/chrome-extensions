{
  "manifest_version": 3,
  "name": "News Extractor",
  "version": "1.1",
  "description": "Retrieve news content from blocked sites",
  "action": {
    "default_icon": "images/news_extractor.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.dn.pt/*",
        "https://www.tsf.pt/*",
        "https://www.publico.pt/*",
        "https://sicnoticias.pt/*",
        "https://cnnportugal.iol.pt/*",
        "https://tek.sapo.pt/*",
        "https://expresso.pt/*",
        "https://observador.pt/*"
      ]
    }
  ]
}
